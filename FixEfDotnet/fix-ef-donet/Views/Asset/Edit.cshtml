@model fix_ef_donet.DataContext.AssetEntity
@{
    ViewData["Title"] = "Asset Edit Data";
}

<h2>Form Edit Asset</h2>

<form asp-controller="Asset" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="AssetCode"></label>
        <input asp-for="AssetCode" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="AssetName"></label>
        <input asp-for="AssetName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PurchaseYear"></label>
        <input asp-for="PurchaseYear" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="JumlahAsset"></label>
        <input asp-for="JumlahAsset" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" />
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Update</button>
</form>
<br />
<a asp-action="GetAll" class="btn btn-sm btn-secondary">Back</a>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}