@model IEnumerable<fix_ef_donet.DataContext.AbsenEntity>
@{
    ViewData["Title"] = "Absen View GetAll";
}

<h2>Absen Get All</h2>
<table class="table table-responsive">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Izin</th>
            <th>Sakit</th>
            <th>Absen</th>
            <th>Jumlah Kehadiran</th>
            <th>Description</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.AbsenName</td>
                <td>@item.Izin</td>
                <td>@item.Sakit</td>
                <td>@item.Absen</td>
                <td>@item.JumlahHadir</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-sm btn-success">View</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Add" class="btn btn-sm btn-primary">Add</a>

