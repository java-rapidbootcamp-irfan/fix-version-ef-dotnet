@model fix_ef_donet.DataContext.HeroEntity
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Detail Hero</h2>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.HeroName</td>
    </tr>
    <tr>
        <th>Role</th>
        <td>@Model.HeroRole</td>
    </tr>
    <tr>
        <th>Power</th>
        <td>@Model.HeroPower</td>
    </tr>
</table>
<br />
<a asp-action="GetAllHero" class="btn btn-sm btn-secondary">Back</a>
